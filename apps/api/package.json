{
  "name": "@servir/api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "tags": [
      "scope:api",
      "type:app"
    ],
    "targets": {
      "build": {
        "dependsOn": [
          "^build",
          "prisma-generate"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/api"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prisma-generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node tools/scripts/prisma-generate.mjs"
        }
      },
      "prisma-migrate-dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm prisma migrate dev --schema apps/api/prisma/schema.prisma"
        }
      },
      "prisma-migrate-deploy": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm prisma migrate deploy --schema apps/api/prisma/schema.prisma"
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/api/dist/package.json",
          "{workspaceRoot}/apps/api/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/api/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@servir/api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@servir/api:build:development"
          },
          "production": {
            "buildTarget": "@servir/api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docs-lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm docs:lint"
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.6",
    "@prisma/client": "6.19.0",
    "@servir/config": "workspace:*",
    "@servir/core-billing": "workspace:*",
    "@servir/core": "workspace:*",
    "@servir/core-auth": "workspace:*",
    "@servir/data-access": "workspace:*",
    "@servir/feature-access": "workspace:*",
    "@servir/feature-billing": "workspace:*",
    "@servir/feature-agent-planning": "workspace:*",
    "@servir/feature-health": "workspace:*",
    "nestjs-zod": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0",
    "prisma": "6.19.0"
  }
}
